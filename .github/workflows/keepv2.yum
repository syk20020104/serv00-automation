name: Keep V2Ray Alive

on:
  schedule:
    - cron: '0 * * * *' # 每小时运行一次

jobs:
  keep-alive:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Setup Node.js
      uses: actions/setup-node@v1
      with:
        node-version: '14' # 根据需要设置 Node.js 版本

    - name: Install dependencies
      run: npm install

    - name: Start V2Ray with PM2
      run: pm2 start ./domains/v2ray/v2ray --name v2ray  -- run
